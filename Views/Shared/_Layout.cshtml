<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Scopic CV Review Automation</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" >
                    <img src="~/Content/Images/scopic-logo-v2-min2.png"  style="max-height:50px">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index","PositionType")">
                            <span class="glyphicon glyphicon-tags"></span> Position Types
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Reviewer")">
                            <span class="glyphicon glyphicon-user"></span> Reviewers
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Applicants")">
                            <span class="glyphicon glyphicon-inbox"></span> Applicants
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Configuration")">
                            <span class="glyphicon glyphicon-cog"></span> Configurations
                        </a>
                    </li>
                    <li>
                        <a href="~/hangfire">
                            <span class="glyphicon glyphicon-tasks"></span> Background Tasks
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Scopic CV Review Automation</p>
        </footer>*@
    </div>
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
